<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView 
        android:id="@+id/imgView_HelloMoonFragment"
        android:src="@drawable/armstrong_on_moon" 
        android:layout_width="match_parent"
        android:contentDescription="@string/hellomoon_description"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:layout_weight="1"/>
        
    <TableRow android:layout_weight="0" android:gravity="center|bottom">
        
        <Button android:id="@+id/button_hellomoon_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hellomoon_play"/>
        
        <Button android:id="@+id/button_hellomoon_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hellomoon_pause"/>
        
    </TableRow>
    

</TableLayout>
